<div class="modal" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-full" role="document">
        <div class="modal-content">
            <div class="p-4 my-auto" id="result">
              <div class="row">
                  <div class="col-12 text-center pb-1">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color:#ffffff;">
                        <span aria-hidden="true">x</span>
                    </button>
                  </div>
                </div>
              <div class="row">
                  <div class="col-12 text-center">
                    <div class="modal-head" style="color: #ffffff;"><strong>Create a New List</strong></div>
                  </div>
                </div>
                    <div class="row">
                        <div class="col-12 text-center">
                          <form id="favorite-create">
                            <div class="form-group favorites-form pb-1">
                              <input class="form-control text-center" required type="text" name="playlist[title]" placeholder="Create a name for your list...">
                            </div>
                            <button type="submit" class="form-control btn btn-pink" style="width: 200px;" data-dismiss="modal" aria-label="Close">Create Favorite List</button>
                          </form>
                        </div>

                    </div>
            </div>
        </div>
    </div>
</div>
